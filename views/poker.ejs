                <img class="river-card" src="" alt="">
                <img class="river-card" src="" alt="">
                <img class="river-card" src="" alt="">
            </div>
        </section>

        <div class="controls">
            <% if (leader) { %>
                <button type="button" id="start-button">Start</button>
            <% } %>
        </div>

        <section class="status">
            <h3>Update bar:</h3>
            <ul id="status-list"></ul>
        </section>

        <section class="players">
            <h3>Players:</h3>
            <ul id="players">
            </ul>
        </section>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const roomId = '<%= room %>';
